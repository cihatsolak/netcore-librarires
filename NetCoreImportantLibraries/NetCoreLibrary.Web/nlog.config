<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

  <!-- enable asp.net core layout renderers -->
  <!-- asp.net çekirdek düzen oluşturucularını etkinleştir -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <!-- yazılacak hedefler -->
  <targets>
    <!-- File Target for all log messages with basic details -->
    <!-- Temel ayrıntılarla birlikte tüm günlük mesajları için Dosya Hedefi -->
    <target xsi:type="File" name="allfile" fileName="nlog-AspNetCore-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
    <!-- Bazı ASP.NET çekirdek oluşturucularını kullanarak ekstra web ayrıntıları içeren kendi günlük iletileri için Dosya Hedefi -->
    <target xsi:type="File" name="ownFile-web" fileName="nlog-AspNetCore-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

    <!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
    <!-- Docker / Visual Studio başlangıç ​​algılamasını iyileştirmek için ömür boyu iletileri barındırmak için Konsol Hedefi -->
    <target xsi:type="Console" name="lifetimeConsole" layout="${level:truncate=4:tolower=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <!-- kaydedici adından hedefe eşlenecek kurallar -->
  <rules>
    <!--All logs, including from Microsoft-->
    <!-- Microsoft'tan gelenler dahil tüm günlükler -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!--Output hosting lifetime messages to console target for faster startup detection -->
    <!-- Daha hızlı başlatma algılaması için barındırma ömrü mesajlarını konsol hedefine gönderin -->
    <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole, ownFile-web" final="true" />

    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <!-- Kritik olmayan Microsoft günlüklerini ve sadece kendi günlüklerini (Kara Delik) atlayın -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <logger name="*" minlevel="Info" writeTo="ownFile-web" />
  </rules>
</nlog>