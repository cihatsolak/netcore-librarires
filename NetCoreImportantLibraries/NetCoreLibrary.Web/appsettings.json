{
  "IpRateLimitOptions": {
    "QuotaExceededResponse": { //Ýstek limiti aþýldýgýndaki response'un özelleþtirilmesi
      "Content": "{{ \"statusCode\": 9005, \"statusMessage\":\"Istek limiti asildi. Izin verilen istek sayisi {1}'de {0} istektir {2} saniye sonra tekrar deneyiniz.\", \"result\":\"null\"  }}",
      "ContentType": "application/json",
      "StatusCode": 200
    },
    "EnableEndpointRateLimiting": false,
    "RealIpHeader": "X-Forwarded-For", //LoadBalancer clientin ip adresini hangi key ile atýyorsa
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhitelist": [ "put:/api/vehicles", "*:/api/status" ],
    "GeneralRules": [
      {
        "Endpoint": "*", //tüm endpointler için geçerli
        "Period": "20s", //20 saniyede
        "Limit": 3 //3 request yapabilir
      },
      {
        "Endpoint": "*:/api/customersapi", //CustomersApiController için geçerli
        "Period": "20s", //20 saniyede
        "Limit": 3 //3 request yapabilir
      },
      {
        "Endpoint": "*:/api/customersapi", //CustomersApiController için geçerli
        "Period": "1h", //1 saatte
        "Limit": 100 //100 request yapabilir
      },
      {
        "Endpoint": "*:/api/vehicles", //VehiclesController için geçerli
        "Period": "30s", //30 saniyede
        "Limit": 5 //5 request yapabilir
      },
      {
        "Endpoint": "((post)|(put)):/api/vehicles", //VehiclesController için geçerli (Post veya put)
        "Period": "1h", //1 saatte günde
        "Limit": 100 //100 request yapabilir
      },
      {
        "Endpoint": "*:/api/vehicles", //VehiclesController için geçerli
        "Period": "30s", //30 saniyede
        "Limit": 5 //5 request yapabilir
      },
      {
        "Endpoint": "*:api/vehicles/*", //Parametre alan metotlar
        "Period": "10s",
        "Limit": 2
      }
    ]
  },
  "IpRateLimitPolicies": { //Ip Bazlý Kýsýtlama
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "30s",
            "Limit": 30
          },
          {
            "Endpoint": "*",
            "Period": "15m",
            "Limit": 200
          }
        ]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "SmidgeSettings": {
    "dataFolder": "App_Data/smidge", //Nereye cachelenecek?
    "version": 1 //versiyonu ne olacak?
  }
}
